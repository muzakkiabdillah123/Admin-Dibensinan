<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:left="2dp"
        android:right="2dp"
        android:top="5dp"
        android:bottom="4dp"
        >
        <shape android:shape="rectangle">
            <solid android:color="#CA000000"/>
            <corners android:radius="@dimen/dimen_5dp" />
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_primary_red"/>
            <corners android:radius="@dimen/dimen_5dp" />
            <stroke
                android:width="1dp"
                android:color="@color/color_primary_red" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>
</layer-list>