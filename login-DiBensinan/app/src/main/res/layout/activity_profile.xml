        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_body_profileijo"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
